<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".question2Activity">

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textChoice1"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_above="@id/textChoice2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/questiontextstyle"
        android:text="Always"
        android:textSize="18sp"
        android:textColor="@color/textInputColor"
        android:textAlignment="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textChoice2"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:background="@drawable/questiontextstyle"
        android:text="A year or so"
        android:textSize="18sp"
        android:textColor="@color/textInputColor"
        android:textAlignment="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textChoice3"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@id/textChoice2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/questiontextstyle"
        android:text="A few months or less"
        android:textSize="18sp"
        android:textColor="@color/textInputColor"
        android:textAlignment="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textNumberQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textChoice3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="1/10"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>